---
import HeroTitle from '../atoms/HeroTitle.astro';
import HeroSubtitle from '../atoms/HeroSubtitle.astro';
import ContactButton from '../atoms/ContactButton.astro';
type Props = {
  title: string
  subtitle:string
};
const {title, subtitle} = Astro.props
---
<div class="absolute top-0 h-full  max-w-screen-md flex flex-col justify-center text-center p-3 md:p-8 gap-6 ">
<HeroTitle title={title} />
<HeroSubtitle subtitle={subtitle}/>
<div class="mx-auto" >
<ContactButton/>
</div>
</div>