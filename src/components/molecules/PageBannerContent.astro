---
import SectionBannerTitle from '../atoms/SectionBannerTitle.astro';
import SectionBannerSubtitle from '../atoms/SectionBannerSubtitle.astro';
type Props = {
  title: string
  subtitle?:string
  color?:string
};
const {title, subtitle, color} = Astro.props
---

<div class=` absolute h-full top-0 flex flex-col md:flex-row justify-around text-center items-center ${subtitle && "md:text-left"} px-4`>
  
<SectionBannerTitle title={title} color={color}/>
{
  subtitle ? (<SectionBannerSubtitle subtitle={subtitle}/>) : null
}
</div>

