---
import { Picture } from '@astrojs/image/components';
import GradientFilter from '../atoms/GradientFilter.astro';
import type {HeroImageData} from "@/types/types"
type Props = {
    data: HeroImageData
}
const {data} = Astro.props
---

<GradientFilter/>
		<Picture class="h-full object-cover min-w-full"
		src={data.url}
		widths={[200, 400, 800, 1500]}
		sizes="100vh"
		aspectRatio={data.width/data.height}
		alt="Image d'accueil"
		fit="cover"
		/>
		</div>

        
