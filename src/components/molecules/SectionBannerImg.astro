---
import { Picture } from '@astrojs/image/components';
import GradientFilter from '../atoms/GradientFilter.astro';
import type {Image} from "@/types/types"
type Props = {
    image?: Image
}
const {image} = Astro.props
---

{image ? (
<GradientFilter/>
		<Picture class="h-full object-cover w-screen"
		src={image.url}
		widths={[200, 400, 800, 1500]}
		sizes="100vh"
		aspectRatio={image.width/image.height}
		alt="Image d'accueil"
		fit="cover"
		/>
		</div>)
		:
		(
	<div class="absolute inset-0 bg-gradient-to-r from-white to-brand-1/50"></div>
)
	}