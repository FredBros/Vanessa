---
import PracticeItemImage from "@/components/atoms/PracticeItemImage.astro";
import PracticeItemShortContent from "../atoms/PracticeItemShortContent.astro";
import PracticeItemTitle from "../atoms/PracticeItemTitle.astro";
import PracticeItemLine from "../atoms/PracticeItemLine.astro";
import ShowMoreBtn from "../atoms/ButtonShadow.astro";
import type { Practice } from "@/types/types";
type Props = {
  practice: Practice;
};
const { practice } = Astro.props;
---

<article
  class="max-w-xs md:h-96 transition-all p-4 bg-white flex flex-col place-content-between md:hover:h-auto md:hover:scale-125 md:hover:drop-shadow-lg"
>
<div class="flex flex-col overflow-hidden hover:overflow-visible">
  <div class="flex justify-center flex-col min-w-0">
    <PracticeItemImage image={practice.image[0]} />
    <div data-aos="fade" data-aos-delay="200" data-aos-offset="200">
      <PracticeItemLine />
    </div>
  </div>
  <div data-aos="fade-down" class="min-w-0">
    <PracticeItemTitle title={practice.banner.title} />
  </div>
  <div data-aos="fade-down" class="overflow-hidden min-w-0">
    <PracticeItemShortContent shortContent={practice.shortContent} />
  </div>
  </div>
  <div class="mt-3 flex justify-center min-w-0" data-aos="fade-down">
    <ShowMoreBtn
      content="En savoir plus"
      link={`/techniques#${practice.slug}`}
    />
  </div>
</article>

<script>
  import AOS from "aos";
  import "aos/dist/aos.css";
  AOS.init();
</script>
