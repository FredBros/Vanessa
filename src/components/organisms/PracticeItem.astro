---
import PracticeItemImage from "@/components/atoms/PracticeItemImage.astro";
import PracticeItemContent from "../molecules/PracticeItemContent.astro";
import PracticeItemLine from "../atoms/PracticeItemLine.astro";
import ShowMoreBtn from "../atoms/ButtonShadow.astro";
import type { Practice } from "@/types/types";
type Props = {
  practice: Practice;
};
const { practice } = Astro.props;
---

<article class="my-16 max-w-md mx-auto transition-all p-4 bg-white">
  <div class="flex justify-center">
    <PracticeItemImage image={practice.image[0]} />
  </div>
  <div data-aos="fade" data-aos-delay="200" data-aos-offset="200">
    <PracticeItemLine />
  </div>
  <div data-aos="fade-down">
    <PracticeItemContent
      title={practice.banner.title}
      shortContent={practice.shortContent}
    />
  </div>
  <div class="mt-3 flex justify-center" data-aos="fade-down">
    <ShowMoreBtn
      content="En savoir plus"
      link={`/techniques#${practice.slug}`}
    />
  </div>
</article>

<script>
  import AOS from "aos";
  import "aos/dist/aos.css";
  AOS.init();
</script>
