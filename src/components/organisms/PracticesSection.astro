---
import StringToMD from "@/components/molecules/StringToMD.astro";
import LayoutSection from "@/layouts/LayoutSections.astro"
import SectionBanner from "./SectionBanner.astro";
import PracticesList from "./PracticesList.astro";
import type { Practice, Image } from "@/types/types"; 
type Props = {
    practices:  Practice[]
    title:string
    subtitle:string
    image:Image
    content:string
}
const {practices,title,subtitle,image, content}= Astro.props
---

<SectionBanner title={title} subtitle={subtitle} image={image}/>
<LayoutSection>
    <div class="p-4 md:text-lg">
    <StringToMD text={content}/>
</div>
<PracticesList data={practices} />

</LayoutSection>
